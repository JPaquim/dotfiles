# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'

    alias pacman="pacman --color auto"
    alias pacaur="pacaur --color auto"
    alias pactree="pactree --color"
fi

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

alias sudo="sudo -E"
alias svim="sudo vim"
alias pacremove="pacman -Rns"
alias pacupdate="pacaur -Syu"
alias updatex="xrdb -merge ~/.Xresources"
alias killx="killall xinit"
alias brilow='sudo su -c "echo 20 > /sys/class/backlight/intel_backlight/brightness"'
alias brimed='sudo su -c "echo 500 > /sys/class/backlight/intel_backlight/brightness"'
alias brihigh='sudo su -c "echo 1500 > /sys/class/backlight/intel_backlight/brightness"'
